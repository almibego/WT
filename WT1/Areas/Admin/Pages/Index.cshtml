@page
@model WT1.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.PCPart[0].PCPartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCPart[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCPart[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCPart[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCPart[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PCPart) {
        <tr>
            <td>
                <img src="~/images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCPartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.PCPartGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PCPartId"
                   class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.PCPartId"
                   class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
